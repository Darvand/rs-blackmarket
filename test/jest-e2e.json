{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@main/(.*)$": "<rootDir>/src/$1",
    "@shared/(.*)$": "<rootDir>/src/shared/$1",
    "@products/(.*)$": "<rootDir>/src/products/$1"
  }
}
